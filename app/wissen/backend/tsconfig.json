{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "types": ["bun-types"],
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"],    }
  },
  "include": ["src", "lib","build.ts"],
  "exclude": ["node_modules"]
}