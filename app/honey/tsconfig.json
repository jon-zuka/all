{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "types": ["vite/client", "solid-js"],
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "pages",
    "render",
    "layouts",
    "components",
    "composables",
    "public",
    "stores",
    "server"
  ]
}
